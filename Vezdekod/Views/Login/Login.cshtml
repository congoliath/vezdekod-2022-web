@{
    ViewData["Title"] = "Login";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>

<form action="~/Login/SignIn" method="get">
    <div class="form-group">
        <label for="inputName">Почта</label>
        <div class="col-sm-10">
            <input type="text" name="email" class="form-control" id="email" placeholder="Почта">
        </div>
    </div>
    <div class="form-group">
        <label for="inputSurname">Пароль</label>
        <div class="col-sm-10">
            <input type="text" name="password" class="form-control" id="inputSurname" placeholder="Пароль">
        </div>
    </div>
    
    <div class="form-check">
     <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
     <label class="form-check-label" for="flexCheckDefault">
      Запомнить меня
     </label>
    </div>

    <div>
        <input class="btn btn-primary btn-lg" type="submit" value="Войти" />
    </div>
    <a href="/SignUp/SignUp">Зарегестрироваться</a>
</form>
     
</body>
</html>